@model IEnumerable<CMCS.Web.Models.Lecturer>
@{
	ViewData["Title"] = "Manage Lecturers";
}

<div class="row">
	<div class="col-12">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<div>
				<h1 class="mb-1">Lecturer Management</h1>
				<p class="text-muted mb-0">Manage lecturer information and contact details</p>
			</div>
			<div>
				<a asp-action="Dashboard" class="btn btn-outline-secondary me-2">‚Üê Back to Dashboard</a>
				<a asp-action="AddLecturer" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Add Lecturer
				</a>
			</div>
		</div>

		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<strong>Success!</strong> @TempData["SuccessMessage"]
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		<div class="card border-0">
			<div class="card-header bg-white border-bottom">
				<h5 class="card-title mb-0">All Lecturers</h5>
			</div>
			<div class="card-body p-0">
				@if (Model.Any())
				{
					<div class="table-responsive">
						<table class="table table-hover mb-0">
							<thead class="table-light">
								<tr>
									<th style="width: 8%;">ID</th>
									<th style="width: 18%;">Full Name</th>
									<th style="width: 17%;">Email</th>
									<th style="width: 13%;">Department</th>
									<th style="width: 12%;">Employee #</th>
									<th style="width: 12%;" class="text-end">Default Rate</th>
									<th style="width: 10%;" class="text-center">Status</th>
									<th style="width: 10%;" class="text-center">Actions</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var lecturer in Model)
								{
									<tr>
										<td class="fw-bold text-primary">#@lecturer.Id</td>
										<td>@lecturer.FullName</td>
										<td>@lecturer.Email</td>
										<td>@lecturer.Department</td>
										<td>@lecturer.EmployeeNumber</td>
										<td class="text-end">R @lecturer.DefaultHourlyRate.ToString("N2")</td>
										<td class="text-center">
											@if (lecturer.IsActive)
											{
												<span class="badge bg-success">Active</span>
											}
											else
											{
												<span class="badge bg-secondary">Inactive</span>
											}
										</td>
										<td class="text-center">
											<div class="btn-group btn-group-sm" role="group">
												<a asp-action="LecturerDetails" asp-route-id="@lecturer.Id" class="btn btn-outline-primary" title="View Details">
													<i class="bi bi-eye"></i>
												</a>
												<a asp-action="EditLecturer" asp-route-id="@lecturer.Id" class="btn btn-outline-secondary" title="Edit">
													<i class="bi bi-pencil"></i>
												</a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				}
				else
				{
					<div class="text-center py-5 text-muted">
						<h5>No lecturers found</h5>
						<p>Click "Add Lecturer" to add your first lecturer.</p>
					</div>
				}
			</div>
		</div>
	</div>
</div>

