@model CMCS.Web.Models.Lecturer
@{
	ViewData["Title"] = "Edit Lecturer - " + Model.FullName;
}

<div class="row">
	<div class="col-lg-8 mx-auto">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<div>
				<h1 class="mb-1">Edit Lecturer Information</h1>
				<p class="text-muted mb-0">Update personal and banking details for @Model.FullName</p>
			</div>
			<a asp-action="LecturerDetails" asp-route-id="@Model.Id" class="btn btn-outline-secondary">‚Üê Cancel</a>
		</div>

		<div class="card border-0">
			<div class="card-body p-4">
				<form asp-action="EditLecturer" method="post">
					@Html.AntiForgeryToken()
					<input type="hidden" asp-for="Id" />
					<input type="hidden" asp-for="CreatedAt" />
					
					<h5 class="mb-3">Personal Information</h5>
					
					<div class="mb-3">
						<label asp-for="FullName" class="form-label fw-semibold">Full Name <span class="text-danger">*</span></label>
						<input asp-for="FullName" class="form-control" required />
					</div>

					<div class="mb-3">
						<label asp-for="Email" class="form-label fw-semibold">Email Address <span class="text-danger">*</span></label>
						<input asp-for="Email" type="email" class="form-control" required />
					</div>

					<div class="mb-3">
						<label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number <span class="text-danger">*</span></label>
						<input asp-for="PhoneNumber" class="form-control" required />
					</div>

					<div class="row g-3 mb-3">
						<div class="col-md-6">
							<label asp-for="Department" class="form-label fw-semibold">Department <span class="text-danger">*</span></label>
							<input asp-for="Department" class="form-control" required />
						</div>
						<div class="col-md-6">
							<label asp-for="EmployeeNumber" class="form-label fw-semibold">Employee Number <span class="text-danger">*</span></label>
							<input asp-for="EmployeeNumber" class="form-control" required />
						</div>
					</div>

					<hr class="my-4" />

					<h5 class="mb-3">Banking Information</h5>

					<div class="mb-3">
						<label asp-for="BankName" class="form-label fw-semibold">Bank Name <span class="text-danger">*</span></label>
						<input asp-for="BankName" class="form-control" required />
					</div>

					<div class="mb-3">
						<label asp-for="AccountNumber" class="form-label fw-semibold">Account Number <span class="text-danger">*</span></label>
						<input asp-for="AccountNumber" class="form-control" required />
					</div>

					<div class="mb-3">
						<label asp-for="TaxNumber" class="form-label fw-semibold">Tax Number <span class="text-danger">*</span></label>
						<input asp-for="TaxNumber" class="form-control" required />
					</div>

					<hr class="my-4" />

					<h5 class="mb-3">Payment Settings</h5>

					<div class="mb-3">
						<label asp-for="DefaultHourlyRate" class="form-label fw-semibold">Default Hourly Rate (R) <span class="text-danger">*</span></label>
						<input asp-for="DefaultHourlyRate" type="number" step="0.01" class="form-control" required />
						<div class="form-text">This is the default rate used when submitting new claims</div>
					</div>

					<div class="mb-4">
						<div class="form-check form-switch">
							<input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
							<label asp-for="IsActive" class="form-check-label">Active Status</label>
						</div>
						<div class="form-text">Inactive lecturers cannot submit new claims</div>
					</div>

					<div class="d-grid gap-2 d-md-flex justify-content-md-end">
						<a asp-action="LecturerDetails" asp-route-id="@Model.Id" class="btn btn-lg btn-outline-secondary px-4">Cancel</a>
						<button type="submit" class="btn btn-lg btn-primary px-5">Save Changes</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

