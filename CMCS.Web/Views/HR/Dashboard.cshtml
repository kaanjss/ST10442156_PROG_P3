@{
	ViewData["Title"] = "HR Dashboard";
}

<div class="row">
	<div class="col-12">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<div>
				<h1 class="mb-1">HR Dashboard</h1>
				<p class="text-muted mb-0">Manage claims processing, payments, and lecturer data</p>
			</div>
		</div>

		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<strong>Success!</strong> @TempData["SuccessMessage"]
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		<!-- Statistics Cards -->
		<div class="row g-4 mb-4">
			<div class="col-md-3">
				<div class="card border-0 shadow-sm">
					<div class="card-body">
						<div class="d-flex align-items-center">
							<div class="flex-shrink-0">
								<div class="bg-primary text-white rounded-circle p-3">
									<i class="bi bi-clock-history fs-4"></i>
								</div>
							</div>
							<div class="flex-grow-1 ms-3">
								<h6 class="text-muted mb-1">Approved Claims</h6>
								<h3 class="mb-0">@ViewBag.ApprovedClaimsCount</h3>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-3">
				<div class="card border-0 shadow-sm">
					<div class="card-body">
						<div class="d-flex align-items-center">
							<div class="flex-shrink-0">
								<div class="bg-success text-white rounded-circle p-3">
									<i class="bi bi-check-circle fs-4"></i>
								</div>
							</div>
							<div class="flex-grow-1 ms-3">
								<h6 class="text-muted mb-1">Settled Claims</h6>
								<h3 class="mb-0">@ViewBag.SettledClaimsCount</h3>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-3">
				<div class="card border-0 shadow-sm">
					<div class="card-body">
						<div class="d-flex align-items-center">
							<div class="flex-shrink-0">
								<div class="bg-warning text-dark rounded-circle p-3">
									<i class="bi bi-currency-dollar fs-4"></i>
								</div>
							</div>
							<div class="flex-grow-1 ms-3">
								<h6 class="text-muted mb-1">Pending Payment</h6>
								<h3 class="mb-0">R @ViewBag.TotalPendingPayment.ToString("N0")</h3>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-3">
				<div class="card border-0 shadow-sm">
					<div class="card-body">
						<div class="d-flex align-items-center">
							<div class="flex-shrink-0">
								<div class="bg-info text-white rounded-circle p-3">
									<i class="bi bi-people fs-4"></i>
								</div>
							</div>
							<div class="flex-grow-1 ms-3">
								<h6 class="text-muted mb-1">Active Lecturers</h6>
								<h3 class="mb-0">@ViewBag.ActiveLecturers</h3>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Quick Actions -->
		<div class="row g-4">
			<div class="col-md-4">
				<div class="card border-0 shadow-sm h-100">
					<div class="card-body text-center">
						<i class="bi bi-file-earmark-check text-primary fs-1 mb-3"></i>
						<h5 class="card-title">Process Approved Claims</h5>
						<p class="card-text text-muted">Generate invoices and process payments for approved claims</p>
						<a asp-action="ApprovedClaims" class="btn btn-primary">View Approved Claims</a>
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<div class="card border-0 shadow-sm h-100">
					<div class="card-body text-center">
						<i class="bi bi-file-earmark-text text-success fs-1 mb-3"></i>
						<h5 class="card-title">Generate Reports</h5>
						<p class="card-text text-muted">Create monthly reports summarizing claims and payments</p>
						<a asp-action="Reports" class="btn btn-success">View Reports</a>
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<div class="card border-0 shadow-sm h-100">
					<div class="card-body text-center">
						<i class="bi bi-person-badge text-info fs-1 mb-3"></i>
						<h5 class="card-title">Manage Lecturers</h5>
						<p class="card-text text-muted">Update lecturer information and contact details</p>
						<a asp-action="Lecturers" class="btn btn-info">Manage Lecturers</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

