<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    CMCS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Lecturer"))
                            {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-workspace me-1"></i>Lecturer Portal
                            </a>
                            <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Submit"><i class="bi bi-file-earmark-plus me-2"></i>Submit Claim</a></li>
                                        <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="MyClaims"><i class="bi bi-file-earmark-text me-2"></i>My Claims</a></li>
                            </ul>
                        </li>
                            }
                            
                            @if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
                            {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear me-1"></i>Admin Portal
                            </a>
                            <ul class="dropdown-menu">
                                        @if (User.IsInRole("ProgrammeCoordinator"))
                                        {
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Coordinator"><i class="bi bi-check-circle me-2"></i>Coordinator</a></li>
                                        }
                                        @if (User.IsInRole("AcademicManager"))
                                        {
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Manager"><i class="bi bi-clipboard-check me-2"></i>Manager</a></li>
                                        }
                            </ul>
                        </li>
                            }
                            
                            @if (User.IsInRole("HR"))
                            {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-building me-1"></i>HR Portal
                            </a>
                            <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="HR" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="HR" asp-action="ApprovedClaims"><i class="bi bi-cash-coin me-2"></i>Process Payments</a></li>
                                        <li><a class="dropdown-item" asp-controller="HR" asp-action="Reports"><i class="bi bi-graph-up me-2"></i>Monthly Reports</a></li>
                                <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="HR" asp-action="Lecturers"><i class="bi bi-people me-2"></i>Manage Lecturers</a></li>
                                    </ul>
                                </li>
                            }
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">Signed in as @User.Identity.Name</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                            </ul>
                        </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container text-center">
            <span>&copy; 2025 CMCS - Contract Monthly Claim System</span>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
