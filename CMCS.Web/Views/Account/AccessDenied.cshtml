@{
	ViewData["Title"] = "Access Denied";
}

<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="col-md-8 col-lg-6">
			<div class="card border-0 shadow-lg">
				<div class="card-body text-center p-5">
					<div class="mb-4">
						<i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
					</div>
					
					<h1 class="display-5 fw-bold text-danger mb-3">Access Denied</h1>
					
					<p class="lead text-muted mb-4">
						You don't have permission to access this page or resource.
					</p>

					<div class="alert alert-info" role="alert">
						<i class="bi bi-info-circle me-2"></i>
						<strong>Why am I seeing this?</strong><br />
						This page requires specific role permissions that your account doesn't have. 
						Please contact your system administrator if you believe this is an error.
					</div>

					<div class="mt-4">
						<a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
							<i class="bi bi-house-door me-2"></i>Go to Home
						</a>
						@if (User.Identity?.IsAuthenticated == true)
						{
							<button type="button" class="btn btn-outline-secondary btn-lg" onclick="history.back()">
								<i class="bi bi-arrow-left me-2"></i>Go Back
							</button>
						}
						else
						{
							<a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
								<i class="bi bi-box-arrow-in-right me-2"></i>Sign In
							</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

